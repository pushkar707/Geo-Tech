<% layout(`/includes/${currentUserPos}`) -%> 
<% block('title').append('<h5>Assigned Tests</h5>') %>

<div class="main-content">
    <div class="page-content">
        <div class="row">
            <div class="col-12"><br>
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered border-primary mb-0">

                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Material</th>
                                        <th>Test</th>
                                        <th>Category</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% tests.forEach((test,index) => { %>
                                        <tr>
                                            <th scope="row"><%= index+1 %></th>
                                            <td><%= test.material %></td>
                                            <td><%= test.name %></td>
                                            <td><%= test.category %></td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>